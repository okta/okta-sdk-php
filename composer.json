{
    "name": "okta/sdk",
    "description": "PHP Wrapper for the Okta API",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Brian Retterer",
            "email": "brian.retterer@okta.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "psr/http-message": "^1.0",
        "php-http/client-common": "^2.3.0",
        "php-http/httplug": "^2.2.0",
        "php-http/message": "^1.8.0",
        "php-http/discovery": "^1.9.1",
        "php-http/curl-client": "^2.1.0",
        "symfony/yaml": "^5.1.3",
        "nesbot/carbon": "^2.39.0",
        "tightenco/collect": "7.25.0",
        "guzzlehttp/psr7": "dev-master#ad1de77a65b751d598ced37747bf4c17d457fbc9",
        "psr/cache": "^1.0.1",
        "league/flysystem-memory": "^1.0",
        "cache/filesystem-adapter": "^1.0",
        "vlucas/phpdotenv": "^5.1.0",
        "lcobucci/jwt": "^4.0@alpha"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5.6",
        "symfony/var-dumper": "^5.1.3",
        "php-http/mock-client": "^1.4.1",
        "cache/void-adapter": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Okta\\": "src"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --testsuite=Unit --colors=always",
        "test:integration": "phpunit --testsuite=Integration --colors=always",
        "build": [
            "@delete-resources",
            "@generate-resources",
            "@test"
        ],
        "delete-resources": [
            "cd ./openapi && npm run cleanFiles"
        ],
        "generate-resources": "cd ./openapi && npm run generator",
        "fix-code": "phpcbf ."
    }
}
